<!DOCTYPE html>
<html>
    <head>
        <!-- Mobile Specific Meta -->
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta charset="UTF-8" />
        
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('assets/images/favicon.ico') }}" />
        
        <!-- Bootstrap theme CSS -->
        <link href="https://fonts.googleapis.com/css?family=Poppins:100,300,500" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('assets/vendor/css/linearicons.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/vendor/css/owl.carousel.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/vendor/css/font-awesome.min.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/vendor/css/nice-select.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/vendor/css/magnific-popup.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/vendor/css/bootstrap.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/vendor/css/main.css') }}">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <div class="oz-body-wrap">
            {# Header + Menu - A deplacer dans un autre Bundle et utiliser {{ render(controller("OCPlatformBundle:Advert:menu",
            {'limit': 3})) }} #}
            <!-- Start Header Area -->
            <header class="default-header">
                <div class="container-fluid">
                    <div class="header-wrap">
                        <div class="header-top d-flex justify-content-between align-items-center">
                            <div class="logo">
                                <a href=""><img src="{{ asset('assets/vendor/img/logo-jobsearch.png') }}" alt=""></a>
                            </div>
                            <div class="main-menubar d-flex align-items-center">
                                <nav class="hide">
                                    <a href="">Home</a>
                                    <a href="">Generic</a>
                                    <a href="">Elements</a>
                                </nav>
                                <div class="menu-bar"><span class="lnr lnr-menu"></span></div>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            <!-- Start Banner Area -->
            <section class="banner-area relative">
                <div class="overlay overlay-bg"></div>
                <div class="container">
                    <div class="row fullscreen align-items-center justify-content-center">
                        <div class="col-lg-10">
                            <div class="banner-content text-center">
                                <h1 class="text-uppercase text-white">Effective Sleek and Clean Design <br>
                                    for User interface</h1>
                                <a href="#" class="genric-btn primary circle arrow"><span class="mr-10">Get Started</span><span
                                        class="lnr lnr-arrow-right"></span></a>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            
            <!-- Body -->
            {% block body %}{% endblock %}
            
            <!-- Footer -->
            <footer class="section-gap">
                <div class="container">
                    <div class="footer-bottom d-flex justify-content-between align-items-center flex-wrap">
                        <p class="footer-text m-0">Copyright &copy; {{ "now"|date("Y")}} All rights reserved - A Symfony 3.4
                            project devolepd by <a href="">Sadio DIALLO</a></p>
                        <div class="footer-social d-flex align-items-center">
                            <a href="#"><i class="fa fa-github"></i></a>
                            <a href="#"><i class="fa fa-bitbucket"></i></a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>

        <!-- Bootstrap theme JS -->
        <script src="{{ asset('assets/vendor/js/vendor/jquery-3.2.1.min.js') }}"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
        <script src="{{ asset('assets/vendor/js/vendor/bootstrap.min.js') }}"></script>
        <script src="{{ asset('assets/vendor/js/jquery.ajaxchimp.min.js') }}"></script>
        <script src="{{ asset('assets/vendor/js/owl.carousel.min.js') }}"></script>
        <script src="{{ asset('assets/vendor/js/jquery.nice-select.min.js') }}"></script>
        <script src="{{ asset('assets/vendor/js/jquery.magnific-popup.min.js') }}"></script>
        <script src="{{ asset('assets/vendor/js/main.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
