{% extends "base.html.twig" %}
    {# Page CSS AND TITLE --------------------------------------------------------------------------------------------------------- #}
    {% block stylesheets %}
        {{ parent() }}
        <link rel="stylesheet" href="{{ asset('assets/css/auth_loginContent.css') }}" />
        <link rel="stylesheet" href="{{ asset('assets/css/auth_registerContent.css') }}" />
    {% endblock %}
    {% block title %}
        {{ parent() }} - User Settings
    {% endblock title %}
    {# ---------------------------------------------------------------------------------------------------------------------------- #}
    {# Page Body ------------------------------------------------------------------------------------------------------------------ #}
    {% block body %}
        <div class="story-content">
            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                <h2 class="text-center">Welcome to your Profile</h2>
            {% else %}
                <h2 class="text-center">Get Online to see more</h2>
            {% endif %}
            <hr class="d-none d-sm-block">

            {# On affiche les messages flash que définissent les contrôleurs du bundle #}
            {% for key, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                <div class="alert alert-{{ key }}">
                    {{ message }}
                </div>
                {% endfor %}
            {% endfor %}

            {# On définit ce block, dans lequel vont venir s'insérer les autres vues du bundle #}
            {% block fos_user_content %}
            {% endblock fos_user_content %}
        </div>
    {% endblock body %}
    {# ---------------------------------------------------------------------------------------------------------------------------- #}