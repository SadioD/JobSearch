<div class="story-content">
    <h4>Recently posted</h4>
    <ul class="ml-3 mt-1">
        {% for job in recentlyPosted if recentlyPosted is not empty %}
            <li>
                <a class="recentPostItem" href="{{path('sadioJobsP_singlePost', {'offerSlug': job.getSlug})}}">
                    {{ job.getPosition }}
                </a>
            </li><br />
        {% else %}
            <li>No Job was found</li>
        {% endfor %}
    </ul>
</div>